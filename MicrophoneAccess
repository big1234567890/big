        async function requestMicAccess() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                document.getElementById("status").innerText = "âœ… Microphone Access Granted!";
                console.log("ğŸ¤ Microphone access granted:", stream);
            } catch (error) {
                document.getElementById("status").innerText = "âŒ Microphone Access Denied!";
                console.error("âŒ Microphone access error:", error);
            }
        }
